<a href="{{ page.url }}">
	<div class="card" >
		<div class="card-image" style=" display: flex;align-items: center;justify-content: center; height: 300px;">
			{% if page.header.cover != nil %}
				<img src="{{page.header.cover}}" style=" width:100%;    height:100%;    object-fit: cover;    overflow: hidden;">
			{% endif %}
		</div>
		<div
			class="card-content" style="height: 200px">
			<!-- TITLE -->
			<p class="title is-5 has-text-weight-semibold">{{ explode(":", page.title)[0] }}</p>
			<p class="subtitle is-6 has-text-weight-semibold">{{ page.taxonomy.author[0] }}</p>
		</div>

		<!-- TAGS -->
		{% if page.taxonomy.tag %}
			<footer class="card-footer">
				<span class="tags">
					{% for tag in page.taxonomy.tag %}
						<a href="{{ blog.url|rtrim('/') }}/tag{{ config.system.param_sep }}{{ tag }}" class="">{{ tag }}</a>
					{% endfor %}
				</span>
			</footer>
		{% endif %}
	</div>
</a>
