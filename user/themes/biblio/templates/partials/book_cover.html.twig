<a href="{{ page.url }}">
	<div class="card" >
		<div class="card-image" style=" display: flex;align-items: center;justify-content: center; height: 300px;">
			{% if page.header.thumb != nil %}
			{{page.media[page.header.thumb].html('', 'book cover', 'book-cover-thumb')}}
				<!--img src="{{page.media['large.jpeg']}}" style=" width:100%;    height:100%;    object-fit: cover;    overflow: hidden;"-->
			{% endif %}
		</div>
		<div
			class="card-content" style="height: 200px">
			<!-- TITLE -->
			<p class="title is-5 has-text-weight-semibold">{{ explode(":", page.title)[0] }}</p>
			{% if page.taxonomy.author|length > 1 %}
			<p class="subtitle is-6 has-text-weight-semibold">{{ page.taxonomy.author[0] }} and {{page.taxonomy.author|length - 1}} other</p>
			{% else %}
			<p class="subtitle is-6 has-text-weight-semibold">{{ page.taxonomy.author[0] }}</p>
			{% endif %}
		</div>

		<!-- TAGS -->
		{#
		{% if page.taxonomy.tag %}
			<footer class="card-footer">
				<span class="tags">
					{% for tag in page.taxonomy.tag %}
						<a href="{{ blog.url|rtrim('/') }}/tag{{ config.system.param_sep }}{{ tag }}" class="">{{ tag }}</a>
					{% endfor %}
				</span>
			</footer>
		{% endif %}
		#}
	</div>
</a>
