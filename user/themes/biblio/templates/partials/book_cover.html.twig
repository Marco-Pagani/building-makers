{% set header_image = page.header.header_image|defined(true) %}
{% set header_image_width  = page.header.header_image_width|defined(260) %}
{% set header_image_height = page.header.header_image_height|defined(390) %}
{% set header_image_file = page.header.header_image_file %}
<a href="{{ page.url }}">
	<div class="card" >
		<div class="card-image" style=" display: flex;align-items: center;justify-content: center; height: 300px;">
			{% if page.header.thumb != nil %}
				<img src="{{page.header.thumb}}" style=" width:100%;    height:100%;    object-fit: cover;    overflow: hidden;">
			{% endif %}
		</div>
		<div
			class="card-content">
			<!-- TITLE -->
			<p class="title is-5 has-text-weight-semibold">{{ explode(":", page.title)[0] }}</p>
			{% if page.taxonomy.author|length > 1 %}
			<p class="subtitle is-6 has-text-weight-semibold">{{ page.taxonomy.author[0] }} +{{page.taxonomy.author|length - 1}}</p>
			{% else %}
			<p class="subtitle is-6 has-text-weight-semibold">{{ page.taxonomy.author[0] }}</p>
			{% endif %}
		</div>

			<!-- TAGS -->
			{% if page.taxonomy.tag %}
				<span class="tags">
					{% for tag in page.taxonomy.tag %}
						<a href="{{ blog.url|rtrim('/') }}/tag{{ config.system.param_sep }}{{ tag }}" class="p-category">{{ tag }}</a>
					{% endfor %}
				</span>
			{% endif %}
		</div>
	</div>
</a>

